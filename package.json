{
	"name": "@extws/client",
	"version": "0.2.0-beta.1",
	"description": "Client for ExtWS",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/esm/main.js",
	"types": "dist/esm/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"dependencies": {
		"@extws/server": "0.2.0-beta.9",
		"@kirick/ip": "^0.1.1",
		"@types/bun": "^1.1.13",
		"@types/ws": "^8.5.13",
		"neoevents": "0.1.0",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@extws/server-bun": "^0.2.0-beta.2",
		"@kirick/eslint-config": "0.1.30",
		"@types/node": "^22.9.0",
		"eslint": "9.10.0",
		"typescript": "5.5.4",
		"vitest": "2.1.2"
	},
	"scripts": {
		"build": "rm -r dist ; bun run build:ts && bun run build:cjs && bun run build:browser",
		"build:browser": "rm -r dist/browser ; bun run build.ts",
		"build:cjs": "bun build src/main.ts --outfile=dist/main.cjs --platform=node --format=cjs --packages=external",
		"build:ts": "rm -r dist/esm ; tsc && rm dist/esm/websocket.browser.*",
		"lint": "eslint . && tsc --skipLibCheck --noemit",
		"publish:npm": "bun run build && bun run lint && bun run test && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/extws-team/client.git"
	},
	"keywords": [
		"extws",
		"websocket",
		"client",
		"rtc"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/extws-team/client/issues"
	},
	"homepage": "https://github.com/extws-team/client#readme"
}
