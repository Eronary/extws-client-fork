{
	"name": "@extws/client",
	"version": "0.1.0-beta.5",
	"description": "Client for ExtWS",
	"publishConfig": {
		"access": "public",
		"tag": "beta"
	},
	"type": "module",
	"main": "dist/esm/main.js",
	"types": "dist/esm/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"dependencies": {
		"@extws/server": "0.2.0-beta.7",
		"@kirick/event-emitter": "3.0.3",
		"@types/bun": "^1.1.13",
		"@types/ws": "^8.5.13",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@extws/server-bun": "^0.2.0-beta.2",
		"@kirick/eslint-config": "latest",
		"@types/node": "^22.9.0",
		"vitest": "^2.1.2"
	},
	"peerDependencies": {
		"@kirick/ip": "^0.1.1"
	},
	"scripts": {
		"build": "rm -r dist ; bun run build:ts && bun run build:cjs",
		"build:cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/main.cjs dist/esm/main.js",
		"build:ts": "rm -r dist/esm ; tsc",
		"lint": "eslint . && tsc --skipLibCheck --noemit",
		"publish:npm": "bun run build && bun run lint && bun run test && npm publish",
		"test": "vitest run --no-file-parallelism"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/extws-team/client.git"
	},
	"keywords": [
		"extws",
		"websocket",
		"client",
		"rtc"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/extws-team/client/issues"
	},
	"homepage": "https://github.com/extws-team/client#readme"
}
